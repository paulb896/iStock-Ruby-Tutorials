
<h1>Login</h1>

<%= form_tag(author_sessions_path, :method => "post") do %>

  <div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <br />
  <div class="actions">
    <%= submit_tag "Login"%>
  </div>
<% end %>
