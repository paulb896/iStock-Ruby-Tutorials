
<%= form_for(@article, :html => {:multipart => true}) do |f| %>
  <div class="article_input">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="article_input">
    <%= f.label :body %>
    <%= f.text_area :body, :rows => "4" %>
  </div>
  <div class="article_input">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>
  <div class="article_input">
    <% if @article.image_file_name %>
        <%= image_tag @article.image.url, :class=> "image_edit" %>
    <% end %>
    <%= f.label :image, "Attach a New Image" %>
    <%= f.file_field :image %>
    <div class="article_input">
        <%= f.submit :value => "Save" %>
    </div>
  </div>
<% end %>

