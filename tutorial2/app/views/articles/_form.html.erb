
<%= form_for(@article, :html => {:multipart => true}) do |f| %>
  <span>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </span>
  <span>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => "4" %>
  </span>
  <span>
    <%= f.submit :value => "Save" %>
  </span>
  <span>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </span>
  <span>
    <% if @article.image_file_name %>
        <%= image_tag @article.image.url, :class=> "image_edit" %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </span>
<% end %>

