<div style="width:200px;">
  <div><h1>Top Articles</h1></div>
  <div>
    <% if logged_in? %>
      <%= link_to "New Article", new_article_path, :class => "new_article btn btn-primary btn-large" %>
    <% end %>
  </div>

  <div>
    <ul id="articles" class="cool_list">
      <% @articles.each do |article| %>
        <li class="cool_list_item">
          <%= link_to article.title, article_path(article), 
            :class => 'article_title', :id => "article_#{article.id}" %>
        </li>
      <% end %>
    </ul>
   </div>
</div>

<div style="width:100px; float:right; position:relative;">
  <select name="" id="scroller" style="display:none">
      <option value="0">All Articles</option>
      <option value="1">January</option>
      <option value="2">Februrary</option>
      <option value="3">March</option>
      <option value="4">April</option>
      <option value="5">May</option>
      <option value="6">June</option>
      <option value="7">July</option>
      <option value="8">August</option>
      <option value="9">September</option>
      <option value="10">October</option>
      <option value="11">November</option>
      <option value="12">December</option>
  </select>
</div>
